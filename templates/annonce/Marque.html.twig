{% extends 'base.html.twig' %}

{% block body %}
	<section class="vh-150 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.jpg');">
		<div class="mask d-flex align-items-center h-100 gradient-custom-3">
			<div class="container h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-9 col-lg-7 col-xl-6">
						<div class="card" style="border-radius: 15px;">
							<div class="card-body p-5">
								<div class="text-center">
									<h3>Veuillez ajouter le type de voiture</h3>
								</div>
								{{ form_start(form) }}
								<div class="container w-50 h-50 bg-light text-black mt-25">
									<div class="form-group">
										{{ form_widget(form) }}

									</div><br>
									<button type="submit" class="btn btn-primary">Publiez</button>
								</div>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}

