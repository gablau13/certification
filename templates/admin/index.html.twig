{% extends 'base.html.twig' %}

{% block title %}Gestion des Annonces
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
{% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
	<div class="container-fluid">
		<h1>Liste des annonces</h1>
		<table class="table">
			<tr>
				<th>Titre</th>
				<th>Prix</th>
                <th>Adresse</th>
				<th>disponibilité</th>
				<th>action</th>
			</tr>
			{% for annonce in annonces %}
				<tr>
					<td>{{annonce.titre}}</td>
					<td>{{annonce.prix | number_format(0, ',', ' ' )}}</td>
                    <td>{{annonce.adresse}}</td>
					<td>
						<div class="form-check">
								{% if annonce.disponibilite == 1 %}
								<input type="checkbox" class="form-check-input" name="" id="" value="true" checked>
							{% else %}
								<input type="checkbox" class="form-check-input" name="" id="" value="true" unchecked>
							{% endif %}
						</div>
					</td>
                    
					<td>
						
						<a href="{{ path('admin_show', {id: annonce.id}) }}">
					<i class="bi bi-eye"></i>
					</a>
						<a href="{{(path('admin_delete', {id:annonce.id}))}}" onclick="return confirm('Etes vous sur de bien vouloir supprimer cette annonce?')">
							<i class="bi bi-trash"></i>
						</a>
                        <td>
                   
               
				</tr>
			{% endfor %}

		</table>
		<a class= "btn btn-primary" href="{{ path('app_annonce_categorie')}}">Ajoutez Catégorie</a>
		<a class="btn btn-primary" href="{{ path('app_annonce_marque')}}">Ajoutez une Marque</a>
	</div><br>
    <a href="">Acceder à la liste des utilisateurs</a>
{% endblock %}
