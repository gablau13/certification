			</tr>
{% for user in user %}
			<tr>
				<td>{{user.prenom}}</td>
				<td>{{user.nom }}</td>
				<td>{{user.email}}</td>
				<td>
					<a href="{{path('profil_edit', {'id': user.id})}}">
					<i class="bi bi-pencil"></i>
					</a>
				
					<a href="{{path('profil_user_annonce', {'id': user.id})}}">
